@import "nib" // Nib mixins
@import "jeet" // Grid system
@import "rupture" // Media Queries
global-reset() // Resets entire HTML Body
//edit() // Show elements for debugging

@import "./utils/colors.styl"
@import "./utils/fonts.styl"

html, body
    height 100%
    padding 0
    margin 0

body
    font-family 'Helvetica', sans-serif
    color $primary-text

.background
    width 105%
    position fixed

input, button, submit, textarea
    box-sizing border-box
    padding 1vw 2vw
    border 0
    box-shadow 0

textarea:disabled
    background $light-transparent

.view-inactive
    display none

@import "./views/view-01.styl"
@import "./views/view-02.styl"
@import "./views/view-03.styl"
@import "./views/view-04.styl"
@import "./views/view-05.styl"
