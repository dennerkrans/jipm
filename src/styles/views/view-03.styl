.promise
    .container
        align(horizontal)
        width 75vw
        margin-top 5vh
        .header
            text-align center
            line-height 1.4 // needs to be adjusted
            center(50vw)
            margin-bottom 4vh
            .name
                font-weight bold
        textarea
            width 100%
            height 13vh
            margin-bottom 2vh
        .feed
            margin 2vh 0
            .feed-promise
                display table
                height 13vh
                width 48%
                margin-bottom 2vh
                background $light
                &:nth-child(even)
                    float left
                &:nth-child(odd)
                    float right
                &:last-child
                    margin-bottom 15vh
                p
                    display table-cell
                    text-align center
                    vertical-align middle
            .choosen
                background $light-transparent
    .footer-print
        fixed bottom
        display table
        width 100%
        height 10vh
        background rgba(80,178,116,.8)
        color rgb(80,178,116)
        h3
            display table-cell
            text-align center
            vertical-align middle
    .footer-active
        color $light
